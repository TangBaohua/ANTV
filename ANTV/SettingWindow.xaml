<Window x:Class="ANTV.SettingWindow"
 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Popup" 
        Width="500" 
        Height="400"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="#2b2b2b" 
        BorderThickness="1" 
        BorderBrush="Gray">
    <Grid>
        <Button Width="48" Height="30" BorderThickness="0" Click="Btn_Close" FontSize="22" Content="×" Background="Red" VerticalAlignment="Top" HorizontalAlignment="Right"></Button>
        <TextBlock Text="Settings Window" 
                   Foreground="White"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="20"/>
    </Grid>
    
</Window>

